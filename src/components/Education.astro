---
import { Icon } from "astro-icon/components";
---

<section class="relative not-prose scroll-mt-[72px]" id="education">
    <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
        <div class="absolute inset-0"></div>
    </div><div
        class="relative mx-auto px-4 lg:py-20 md:px-6 md:py-16 py-12 text-default max-w-3xl"
    >
        <div class="flex flex-col gap-8 md:gap-12">
            <div class="w-full md:self-center md:py-4">
                <div class="mb-8 md:mb-12 md:mx-auto rtl:text-right text-left">
                    <h2
                        class="font-bold font-heading leading-tighter tracking-tighter text-heading text-3xl lg:text-4xl"
                    >
                        Education
                    </h2>
                </div><div class="">
                    <div class="flex">
                        <div
                            class="flex items-center rtl:mr-0 flex-col mr-4 rtl:ml-4"
                        >
                            <div>
                                <div class="flex items-center justify-center">
                                    <Icon
                                        class="rounded-full h-10 w-10 border-2 border-primary dark:border-blue-700 dark:text-slate-200 p-2 text-primary"
                                        name="tabler:school"
                                    />
                                </div>
                            </div><div
                                class="bg-black/10 dark:bg-slate-400/50 h-full w-px"
                            >
                            </div>
                        </div><div class="pt-1 pb-8">
                            <p class="font-bold text-xl">
                                Bachelor Of Engineering<br /><span
                                    class="font-normal"
                                    >Griffith University</span
                                ><br /><span class="text-sm font-normal"
                                    >2011 - 2014</span
                                >
                            </p>
                        </div>
                    </div><div class="flex">
                        <div
                            class="flex items-center rtl:mr-0 flex-col mr-4 rtl:ml-4"
                        >
                            <div>
                                <div class="flex items-center justify-center">
                                    <Icon
                                        class="rounded-full h-10 w-10 border-2 border-primary dark:border-blue-700 dark:text-slate-200 p-2 text-primary"
                                        name="tabler:school"
                                    />
                                </div>
                            </div>
                        </div><div class="pt-1">
                            <p class="font-bold text-xl">
                                Diploma of Engineering<br /><span
                                    class="font-normal"
                                    >Queensland Institute of Engineering and
                                    Technology</span
                                ><br /><span class="text-sm font-normal"
                                    >2010 - 2011</span
                                >
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
